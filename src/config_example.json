{
  "APP_ID": "O2026",
  "PROGRAM_DATA_URL": "/2026/program.js",
  "PEOPLE_DATA_URL": "/2026/people.js",
  "FETCH_OPTIONS": {
    "cache": "reload",
    "credentials": "omit",
    "headers": {
      "Origin": "http://metropolcon.eu"
    }
  },
  "FETCH_OPTIONS_FIRST": {
    "credentials": "omit",
    "headers": {
      "Origin": "http://metropolcon.eu"
    }
  },
  "TIMEZONE": "Europe/Berlin",
  "TIMEZONECODE": "CEST",
  "INTERACTIVE": true,
  "HEADER": {
    "IMG_SRC": "",
    "IMG_ALT_TEXT": "",
    "LINEFEED_AFTER_URL": false
  },
  "NAVIGATION": {
    "INFO": true,
    "EXTRA": [{ "LABEL": "MetropolCon Home", "URL": "https://metropolcon.eu" }]
  },
  "LOCATIONS": {
    "SEARCHABLE": false,
    "MAPPING": [
      { "KEY": "Silent Green", "MAP_URL": "https://metropolcon.eu" }
    ]
  },
  "PROGRAM": {
    "LIMIT": {
      "SHOW": true,
      "OPTIONS": [50, 100, 250, 500, 1000],
      "DEFAULT": 100,
      "SHOW_MORE": {
        "NUM_EXTRA": 50
      }
    },
    "MY_SCHEDULE": {
      "SHARE": {
        "MAX_LENGTH": 2500
      }
    }
  },
  "TAGS": {
    "SEARCHABLE": false,
    "HIDE": false,
    "SEPARATE": [
      { "PREFIX": "Division", "PLACEHOLDER": "tags.separate.placeholder_division", "SEARCHABLE": false, "HIDE": true },
      { "PREFIX": "Type", "PLACEHOLDER": "tags.separate.placeholder_type", "SEARCHABLE": false, "HIDE": false },
      { "PREFIX": "Tag", "PLACEHOLDER": "tags.separate.placeholder_tag", "SEARCHABLE": false, "HIDE": false },
      { "PREFIX": "Track", "PLACEHOLDER": "tags.separate.placeholder_track", "SEARCHABLE": false, "HIDE": false }
    ],
    "FORMAT_AS_TAG": false,
    "DAY_TAG": {
      "GENERATE": true,
      "DAYS": {
        "3": "Wednesday",
        "4": "Thursday",
        "5": "Friday",
        "6": "Saturday",
        "7": "Sunday",
        "1": "Monday",
        "2": "Tuesday"
      },
      "PLACEHOLDER": "tags.day_tag.placeholder",
      "SEARCHABLE": false,
      "HIDE": false
    },
    "DONTLIST": ["Division", "days"]
  },
  "HIDE_BEFORE": {
    "HIDE": false,
    "TIMES": [
      { "TIME": "10:00:00", "LABEL_24H": "10:00", "LABEL_12H": "10am" },
      { "TIME": "12:00:00", "LABEL_24H": "12:00", "LABEL_12H": "12 noon" },
      { "TIME": "14:00:00", "LABEL_24H": "14:00", "LABEL_12H": "2pm" },
      { "TIME": "16:00:00", "LABEL_24H": "16:00", "LABEL_12H": "4pm" },
      { "TIME": "18:00:00", "LABEL_24H": "18:00", "LABEL_12H": "6pm" },
      { "TIME": "20:00:00", "LABEL_24H": "20:00", "LABEL_12H": "8pm" }
    ]
  },
  "PERMALINK": {
    "SHOW_PERMALINK": true
  },
  "EXPAND": {
    "SPRING_CONFIG": { "duration": 100 }
  },
  "ITEM_DESCRIPTION": {
    "PURIFY_OPTIONS": {
      "FORBID_ATTR": ["style", "data-sheets-userformat", "data-sheets-value"]
    }
  },
  "LINKS": [
    {"NAME": "signup",
     "TEXT": "Click to sign up",
     "TAG": ""
    },
    {"NAME": "meeting",
     "TEXT": "Click to view stream",
     "TAG": "",
     "WHEN": ["during"]
    },
    {"NAME": "recording",
     "TEXT": "Click to view recording",
     "TAG": "",
     "WHEN": ["after"]
    }
  ],
  "TIME_FORMAT": {
    "DEFAULT_12HR": false,
    "SHOW_CHECKBOX": true,
    "AM": "AM",
    "PM": "PM"
  },
  "DURATION": {
    "SHOW_DURATION": true
  },
  "SHOW_PAST_ITEMS": {
    "SHOW_CHECKBOX": true,
    "ADJUST_MINUTES": 10,
    "FROM_START": false
  },
  "PEOPLE": {
    "THUMBNAILS": {
      "SHOW_THUMBNAILS": true,
      "SHOW_CHECKBOX": true,
      "DEFAULT_IMAGE": "head.svg"
    },
    "SORT": {
      "SHOW_CHECKBOX": true
    },
    "TAGS": {
      "SEARCHABLE": false,
      "HIDE": false,
      "SEPARATE": [
      ]
    },
    "SEARCH": {
      "SHOW_SEARCH": true
    },
    "BIO": {
      "PURIFY_OPTIONS": {
        "FORBID_ATTR": ["style"]
      }
    }
  },
  "INFORMATION": {
    "MARKDOWN_URL": "info.md"
  },
  "TIMER": {
    "FETCH_INTERVAL_MINS": 30,
    "TIMER_TICK_SECS": 15
  },
  "DEBUG_MODE": {
    "ENABLE": false
  }
}
